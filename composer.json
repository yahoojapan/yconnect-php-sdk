{
    "name": "yahoojapan/yconnect-php-sdk",
    "description": "YConnect PHP SDK",
    "keywords": [
        "Yahoo! JAPAN",
        "PHP",
        "YConnect",
        "OpenID Connect",
        "UserInfo"
    ],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/yahoojapan/yconnect-php-sdk",
    "authors": [
      {
        "name": "Yahoo Japan Corporation"
      }
    ],
    "autoload": {
      "psr-0": {
        "YConnect": "lib/"
      }
    },
    "require": {
        "ext-json": "*",
        "ext-curl": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^5",
        "adhocore/jwt": "0.1.2",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "phpunit": "phpunit --colors=always",
        "phpcs": "phpcs --standard=phpcs.xml"
    }
}
